<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/misc1"
        android:layout_width="258dp"
        android:layout_height="113dp"
        android:layout_marginRight="352dp"
        android:elevation="6dp"
        android:src="@drawable/misc_1_opt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="43dp"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:id="@+id/textsplash"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:elevation="6dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/misc2"
            android:layout_marginTop="150dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_only_opt"
            android:layout_gravity="center">
        </ImageView>

        <ImageView
            android:id="@+id/misc3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/title_only_opt"
            android:layout_marginTop="-30dp"
            android:layout_gravity="center">
        </ImageView>

        <ImageView
            android:id="@+id/misc4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/description_only_opt"
            android:layout_marginTop="-110dp"
            android:layout_gravity="center">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textlogin"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:elevation="6dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textColor="#FFF"
            android:textSize="24sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/logged"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/accounticon"
                    android:src="@drawable/account_plant_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="100dp">
                </ImageView>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:hint="Username"
                    android:singleLine="true"></EditText>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:password="true"
                    android:singleLine="true"></EditText>

                <Button
                    android:id="@+id/btnLogin"
                    style="@android:style/Widget.Material.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOG IN"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundbuttondark"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:onClick="goToMenupActivity"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnForgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Forgot Password?"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="—or—" />

                <Button
                    android:id="@+id/btnScan"
                    style="@android:style/Widget.Material.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundbutton"
                    android:text="CREATE A NEW ACCOUNT"
                    android:textColor="#FFFFFF"
                    android:onClick="goToScanActivity"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/misc5"
        android:layout_width="match_parent"
        android:layout_height="820dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/longest_background_opt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="4.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>